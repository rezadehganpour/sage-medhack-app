<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information" />

            <EditText
                android:id="@+id/signup_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Username"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="66dp" />
            <EditText
                android:id="@+id/signup_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="277dp" />

            <EditText
                android:id="@+id/signup_firstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="First Name"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="213dp" />

            <EditText
                android:id="@+id/signup_lastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                tools:layout_editor_absoluteX="32dp"
                tools:layout_editor_absoluteY="213dp" />

            <EditText
                android:id="@+id/signup_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Age"
                android:inputType="number"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="357dp" />


            <Spinner
            android:id="@+id/signup_country"
            android:layout_width="206dp"
            android:layout_height="39dp"
            android:entries="@array/countries_array" />

            <Spinner
                android:id="@+id/signup_genrder"
                android:layout_width="206dp"
                android:layout_height="39dp"
                android:entries="@array/gender_array" />

            <TextView
                android:id="@+id/medicalInformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Medical Information" />

            <MultiAutoCompleteTextView
                android:id="@+id/knownDiagnosis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Known Diagnosis"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="425dp" />

            <MultiAutoCompleteTextView
                android:id="@+id/medications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Current Medications"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="425dp" />

            <MultiAutoCompleteTextView
                android:id="@+id/symptoms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Current Symptoms"
                tools:layout_editor_absoluteX="31dp"
                tools:layout_editor_absoluteY="425dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="submitSignUp"
                android:text="Submit"
                android:textColor="#FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>